<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
</head>
<body>
    <div class="container">
        <h1>URL Shortener</h1>
        
        <form action="/shorten" method="POST">
            <input
                type="text"
                name="longURL"
                id="longURL"
                placeholder="Enter long URL (include http:// or https://)"
                required
            />
            <button type="submit">Shorten</button>
        </form>

     

        <% if (urls.length > 0) { %>
            <div>
              <h2>Recently Shortened URLs</h2>
              <ul>
                <% urls.forEach(url => { %>
                  <li>
                    <a href="/<%= url.shortCode %>" target="_blank">/<%= url.shortCode %></a>
                    â†’ <%= url.longURL %>
                  </li>
                <% }) %>
              </ul>
            </div>
        <% } %>
    </div>
</body>
</html>
