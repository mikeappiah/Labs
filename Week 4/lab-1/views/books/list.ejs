<%- contentFor('body') %>
<main class="container mt-4">
  <h2 class="mb-4">Book Catalog</h2>
  <!-- <a href="/books/add" class="btn btn-primary mb-3">Add Book</a> -->

  <table class="table table-dark table-striped-columns table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
        <th>Copies</th>
      </tr>
    </thead>
    <tbody>
      <% books.forEach(book => { %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.isbn %></td>
        <td><%= book.copies %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</main>