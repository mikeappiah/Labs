<% contentFor('body') %>
<div class="col-md-9 p-4">
  <div>
    <h4 class="mb-2">Book Catalogue</h4>
    <div class="table-responsive">
      
      <table class="table table-hover table-dark table-striped-columns table-bordered">
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Total Copies</th>
          </tr>
        </thead>
        <tbody>
          <% books.forEach(function(book) { %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.isbn %></td>
            <td><%= book.copies %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>